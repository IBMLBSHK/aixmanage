---
- name: LPARS list
  hosts: all
  gather_facts: no
  tasks:
  - name: Retrieve the LPAR related information
    ibm.power_aix.lpar_facts:

  - set_fact:
     lparsfacts: ansible_facts.lpar

  - name: Store the LPAR related information in log
    copy:
      content: lparsfacts
      dest: "./logfile/lparsfacts.log"
      owner: ansiadm
      group: ansiadm
    